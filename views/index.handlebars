<h1>Planet of the Scrapes</h1>
<button id="scrape" class="btn btn-secondary">Scrape</button>

{{#each article}}
<div class="container border mb-2 p-2">
    <a href="https://www.freecodecamp.org/{{this.link}}" target="_blank" class="lead">{{this.title}}</a>
    <h5 class="text-muted">by: {{this.author}}</h5>
    <p>{{this.tags}}</p>
    <button class="btn btn-secondary comment" id="{{this._id}}" data-id="{{this._id}}" data-target="#exampleModal" data-toggle="modal">Comment</button>
    <button class="btn btn-danger delete" id="{{this._id}}">Delete</button>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Leave a comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input type="text" class="form-control article-message-title" placeholder="Title">
        <textarea class="form-control article-message-body" rows="3" placeholder="Message"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary save" id="{{this._id}}">Save changes</button>
      </div>
    </div>
  </div>
</div>
{{/each }}



<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>