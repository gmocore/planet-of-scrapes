
    <div class="container-fluid bg-dark text-light p-3 mb-2 shadow border-bottom border-light">

    <h1 class="lead text-center">Saved Articles</h1>
    </div>
<div class="container button-container d-flex justify-content-center">
<a class="btn btn-secondary button-container justify-content-center mb-4 shadow" href="/"><span><i class="fas fa-home"></i></span></a>

</div>

{{#each saved}}

<div class="container border mb-2 p-2 bg-light shadow" >
    <a href="https://www.freecodecamp.org/{{this.link}}" target="_blank" class="lead text-decoration-none link">{{this.title}}</a>
    <h5 class="text-muted">by: {{this.author}}</h5>
    <p>{{this.tags}}</p>
    <div class="input-group mb-3 container">
        <input type="text" class="form-control comment-input" placeholder="leave a comment"  id="input-{{this._id}}">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary comment" type="button" id="{{this._id}}">Add Comment</button>
        </div>
    </div>
    
    <button class="btn btn-danger delete" ><span><i id="{{this._id}}" class="far fa-trash-alt"></i></span></button>
    <a class="btn btn-primary text-light view-comment" ><span><i  id="{{this._id}}" class="far fa-comment-alt"></i></span></a>
    
</div>
{{/each}}

<div class="modal" tabindex="-1" role="dialog" id="modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Comments</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="modal-text"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
      </div>
    </div>
  </div>
</div>